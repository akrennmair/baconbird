#!/usr/bin/perl

use strict;
use warnings;
#use lib "/usr/share/baconbird";

use Data::Dumper;
use BaconBird::Controller;
use BaconBird::Model;
use BaconBird::View;

my $version = "0.1";

my $ctrl = BaconBird::Controller->new();
my $model = BaconBird::Model->new(ctrl => $ctrl);
my $view = BaconBird::View->new(ctrl => $ctrl);

$ctrl->model($model);
$ctrl->view($view);

$ctrl->login;
$ctrl->run;

